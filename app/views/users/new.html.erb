<h1 class="center">Let's sign up</h1>

<div class="mx-auto w-50">
  <%= form_with(model: @user, local: true) do |form| %>
    <div class="form-group">
      <label>User name</label>    
      <%= form.text_field :username, class: "form-control", placeholder: "Enter username" %>
      <% if @user.errors.key?("username") %>
        <small class="form-text text-muted"><%=@user.errors[:username].first.capitalize %></small>
      <% end %>
    </div>

    <div class="form-group">
      <label>Email name</label>    
      <%= form.text_field :email, class: "form-control", placeholder: "Enter email", type: "email" %>
      <% if @user.errors.key?("email") %>
        <small class="form-text text-muted"><%=@user.errors[:email].first.capitalize %></small>
      <% end %>
    </div>

    <div class="form-group">
      <label>Password</label>
      <%= form.text_field :password, class: "form-control", placeholder: "Password", type: "password" %>
      <% if @user.errors.key?("password") %>
        <small class="form-text text-muted"><%=@user.errors[:password].first.capitalize %></small>
      <% end %>
    </div>
    <div class="center">
      <%= form.submit "Sign up", class: "btn btn-primary btn-lg" %>
    </div>
  <% end %>
</div>
